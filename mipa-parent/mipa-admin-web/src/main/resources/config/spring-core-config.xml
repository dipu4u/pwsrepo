<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:context="http://www.springframework.org/schema/context" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">
	
	<context:component-scan base-package="com.mipa" />

	<context:annotation-config />
	
	<context:property-placeholder location="classpath:config/data/application-config.properties" />
	
	<import resource="spring-web-config.xml" />
	<import resource="spring-admin-security-config.xml" />
	<import resource="spring-admin-database-config.xml" />
	
</beans>